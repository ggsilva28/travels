---
import { Image } from "astro:assets";

interface Props {
	imgSrc: ImageMetadata;
	title: string;
	description: string;
}

const { imgSrc, title, description } = Astro.props;
---

<div class="card-destination">
	<Image class="card-destination-cover img-cover" src={imgSrc} alt="Card Destinations" />

	<div class="card-destination-content">
		<div class="card-destination-header">
			<div class="object-left"></div>
			<div class="object-right"></div>
		</div>

		<div class="card-destination-footer">
			<div class="title">{title}</div>
			<div class="description">{description}</div>
            <div class="see-details">Ver detalhes</div>
		</div>
	</div>
</div>

<style lang="scss">
	.card-destination {
		cursor: pointer;
		position: relative;

		box-shadow: rgb(38, 57, 77) 0px 20px 30px -10px;
		border-radius: 16px;
		overflow: hidden;

		transition: 300ms;

		

		&:hover {
			box-shadow: rgb(38, 57, 77) 0px 20px 30px -5px;

			.card-destination-content .card-destination-footer {
				margin-bottom: 16px;

                .see-details{
                    transform: translateY(12px)
                }
			}
		}

		.card-destination-content {
			position: absolute;
			top: 0;
			left: 0;
			bottom: 0;

			display: flex;
			flex-direction: column;
			align-items: center;
			justify-content: space-between;

			padding: 16px;

			background: linear-gradient(180deg, rgba(0, 0, 0, 0.1) 0%, rgba(0, 0, 0, 0.7) 100%);
			color: var(--white);
			.card-destination-footer {
				transition: 300ms;

				.title {
					font-size: 48px;
					font-weight: 700;
					margin-bottom: 12px;
				}

				.description {
					font-size: 16px;
					font-weight: 600;
					line-height: 140%;
				}

                .see-details{
                    transform: translateY(32px);
                    transition: 300ms;
                    font-size: 14px;
                }
			}
		}
	}
</style>
